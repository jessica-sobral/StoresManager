@model List<StoresManager.ViewModels.StoreViewModel>

@{
    ViewData["Title"] = "Gerenciamento da StoreManager";
}

<p><a href="/Store/Form">Cadastrar Loja</a></p><br>

<h1>Gerenciamento da StoreManager</h1><hr>

@if (Model.Count == 0)
{
    <p>Nenhuma loja cadastrada at√© o momento.</p>
}
else
{
    <p>Lojas cadastradas:</p>

    @foreach (var store in Model)
    {
        <br><h4>@store.Name</h4>
        <p><a href="/Store/Show/@store.Id">Detalhes</a></p>
        <p><a href="/Store/Delete/@store.Id">Excluir</a></p>
    }
}
