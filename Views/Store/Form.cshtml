@{
    ViewData["Title"] = "Cadastrar Loja";
}

<h1>Cadastrar Loja</h1><hr>
<p>Utilize o formulário para cadastrar uma nova loja.</p><br>

<form action="/Store/Create" method="post">
    <label for="id">Id</label>
    <input type="text" id="id" name="id" size="30"><br><br>

    <label for="floor">Piso do Shopping</label>
    <select id="floor" name="floor">
        <option value="Piso 1">Piso 1</option>
        <option value="Piso 2">Piso 2</option>
        <option value="Piso 3">Piso 3</option>
    </select><br><br>

    <label for="name">Nome</label>
    <input type="text" id="name" name="name" size="26"><br><br>

    <label for="description">Descrição</label>
    <input type="text" id="description" name="description" size="22"><br><br>

    <label for="type">Loja ou Quiosque?</label>
    <input type="text" id="type" name="type" size="13"><br><br>

    <label for="email">E-mail</label>
    <input type="text" id="email" name="email" size="25"><br><br>

    <input type="submit" value="Cadastrar">
</form>
